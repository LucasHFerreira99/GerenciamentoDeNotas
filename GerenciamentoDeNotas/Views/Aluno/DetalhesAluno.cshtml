@model GerenciamentoDeNotas.Models.Usuario.UsuarioModel

@{
    ViewData["Title"] = "Detalhes do aluno";
}

<div style="text-align: center; padding: 10px;">
    <h1 class="display-7">Informações do Aluno</h1>
    <hr />
    <dl class="row" style="display: flex; flex-direction: column; align-items: center; width: 100%;">
        @foreach (var prop in new[] {
        new { DisplayName = Html.DisplayNameFor(model => model.Nome), Value = Html.DisplayFor(model => model.Nome) },
        new { DisplayName = Html.DisplayNameFor(model => model.Login), Value = Html.DisplayFor(model => model.Login) },
        new { DisplayName = Html.DisplayNameFor(model => model.Email), Value = Html.DisplayFor(model => model.Email) },
        new { DisplayName = Html.DisplayNameFor(model => model.Cpf), Value = Html.DisplayFor(model => model.Cpf) }
        })
        {
            <div style="display: flex; width: 80%; justify-content: space-between; align-items: center; margin: 0; padding: 10px; border: 1px solid #ccc; border-radius: 5px;">
                <dt style="font-weight: bold; width: 30%; text-align: right; margin-right: 10px; margin-bottom: 0;">
                    @prop.DisplayName:
                </dt>
                <dd style="margin: 0; width: 70%; padding-left: 5px;">
                    @prop.Value
                </dd>
            </div>
        }
    </dl>
</div>


<div>
    <button class="btn btn-secondary w-100" onclick="window.history.back()">Voltar aos detalhes da turma</button>
</div>
