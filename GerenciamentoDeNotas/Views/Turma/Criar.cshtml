@model GerenciamentoDeNotas.DTOs.TurmaDto

@{
    ViewData["Title"] = "Criar";
}

    
<div class="text-center">
    <h1 class="display-4 mb-4">Criar nova Turma</h1>

    <hr />
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <form asp-action="Criar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>:
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DataDeInicio" class="control-label"></label>:
                    <input asp-for="DataDeInicio" class="form-control" type="date" />
                    <span asp-validation-for="DataDeInicio" class="text-danger"></span>
                </div>
                </br>

                <div class="d-flex justify-content-between mt-4">
                    <input type="submit" value="Salvar" class="btn btn-primary w-100 me-2" />
                    <a asp-action="Index" class="btn btn-secondary w-100">Voltar a lista</a>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
