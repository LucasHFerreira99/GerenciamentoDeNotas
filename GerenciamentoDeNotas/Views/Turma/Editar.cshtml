@model GerenciamentoDeNotas.DTOs.TurmaEditarDto

@{
    ViewData["Title"] = "Editar a turma";
}

<div class="text-center">
    <h1 class="display-4">Editar Turma</h1>
</div>

<hr />
<div class="row justify-content-md-center">

    <form asp-action="Editar">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Nome" class="control-label form-label text-center" style="font-size: 1.2rem; font-weight: bold;">Nome da Turma</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DataDeInicio" class="control-label form-label text-center" style="font-size: 1.2rem; font-weight: bold;">Data de início do período letivo</label>
            <input asp-for="DataDeInicio" class="form-control" />
            <span asp-validation-for="DataDeInicio" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group d-flex justify-content-between">
            <input type="submit" value="Salvar" class="btn btn-primary w-100 me-2" />
            <a asp-action="Index" class="btn btn-secondary w-100">Voltar a lista</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
