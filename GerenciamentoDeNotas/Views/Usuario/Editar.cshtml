@using GerenciamentoDeNotas.Enums
@using GerenciamentoDeNotas.Models.Usuario

@model UsuarioModel

@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar Usuário</h1>
</div>

<form asp-controller="Usuario" asp-action="Editar" method="post">
    <input type="hidden" asp-for="UsuarioId" />
    <div class="form-group">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control">
        @Html.ValidationMessageFor(c => c.Nome)
    </div>
    <div class="form-group">
        <label for="email" class="form-label">Email</label>
        <input type="text" asp-for="Email" class="form-control">
        @Html.ValidationMessageFor(c => c.Email)
    </div>
    <div class="form-group">
        <label for="Login" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control">
        @Html.ValidationMessageFor(c => c.Login)
    </div>
    <div class="form-group">
        <label for="Cpf" class="form-label">CPF</label>
        <input type="text" asp-for="Cpf" class="form-control">
        @Html.ValidationMessageFor(c => c.Cpf)
    </div>

    <div class="form-group">
        <label for="Perfil" class="form-label">Perfil</label>
        <select asp-for="Perfil" class="form-control">
            <option value="">Selecione</option>
            <option value="@PerfilEnum.Admin">Administrador</option>
            <option value="@PerfilEnum.Professor">Professor</option>
            <option value="@PerfilEnum.Aluno">Aluno</option>
        </select>
        @Html.ValidationMessageFor(c => c.Perfil)
    </div>
    <br />
    <button type="submit" class="btn btn-primary w-100 mb-2" asp-controller="Usuario" asp-action="Editar">Editar</button>
    <a class="btn btn-secondary w-100" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
</form>