@using GerenciamentoDeNotas.Models.Usuario
@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação apagar usuário";
}
<div class="text-center">
    <h3>Realmente deseja apagar o usuário (@Model.Login) ?</h3>
</div>
<a class="btn btn-success w-100 mb-2" role="button" asp-controller="Usuario" asp-action="Index">Cancelar Exclusão</a>
<a class="btn btn-danger w-100" role="button" asp-controller="Usuario" asp-action="Excluir" asp-route-id="@Model.UsuarioId">Confirmar Exclusão</a>