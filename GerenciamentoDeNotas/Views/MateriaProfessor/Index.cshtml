@model IEnumerable<GerenciamentoDeNotas.Models.ProfessorModel>

@{
    ViewData["Title"] = "Professores";
}

<div class="text-center">
    <h1 class="display-4">Listagem de Professores</h1>

    <table class="cell-border hover bg-white" width="100%" id="TabelaMateriaProfessor">
        <thead>
            <tr>
                <th class ="text-center">
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Login)
                </th>
                <th class ="text-center">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.CPF)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Login)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CPF)
                    </td>
                    <td>
                        <a asp-action="GerenciarTurmas" asp-route-id="@item.Id" class="btn btn-outline-info">Listar Turmas</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>